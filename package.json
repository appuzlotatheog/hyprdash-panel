{
    "name": "hyprdash-panel",
    "version": "1.0.0",
    "description": "HyprDash - Game Server Management Panel (API + Web)",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
        "dev:api": "tsx watch src/index.ts",
        "dev:web": "cd web && npm run dev",
        "build": "npm run build:api && npm run build:web",
        "build:api": "tsc",
        "build:web": "cd web && npm run build",
        "start": "node dist/index.js",
        "db:generate": "prisma generate",
        "db:push": "prisma db push",
        "db:seed": "tsx prisma/seed.ts",
        "db:studio": "prisma studio"
    },
    "dependencies": {
        "@prisma/client": "^6.0.0",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^7.1.5",
        "helmet": "^7.1.0",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "nodemailer": "^6.9.7",
        "otplib": "^12.0.1",
        "qrcode": "^1.5.3",
        "socket.io": "^4.7.2",
        "uuid": "^9.0.0",
        "zod": "^3.22.4"
    },
    "devDependencies": {
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.10.4",
        "@types/nodemailer": "^6.4.14",
        "@types/qrcode": "^1.5.5",
        "@types/uuid": "^9.0.0",
        "concurrently": "^8.2.2",
        "prisma": "^6.0.0",
        "tsx": "^4.6.2",
        "typescript": "^5.3.3"
    }
}